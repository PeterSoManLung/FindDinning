# Environment Configuration Template for Find Dining Application
# Copy this file to .env and update the values for your environment

# Application Environment
NODE_ENV=development

# Database Configuration
USER_DB_NAME=user_db
USER_DB_USER=postgres
USER_DB_PASSWORD=password
RESTAURANT_DB_NAME=restaurant_db
RESTAURANT_DB_USER=postgres
RESTAURANT_DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:19006
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ML/AI Service Endpoints
ML_MODEL_ENDPOINT=
SENTIMENT_ANALYSIS_ENDPOINT=
BEDROCK_ENDPOINT=
NLP_MODEL_ENDPOINT=

# External API Keys
DATA_GOV_HK_API_KEY=
OPENRICE_API_KEY=
TRIPADVISOR_API_KEY=
EATIGO_API_KEY=
CHOPE_API_KEY=
FOODPANDA_API_KEY=
BISTROCHAT_API_KEY=
KEETA_API_KEY=

# Data Synchronization
SYNC_SCHEDULE=0 0 1 * *
LOG_LEVEL=info

# Mobile App Configuration (for React Native development)
EXPO_PUBLIC_API_URL=http://localhost:3000